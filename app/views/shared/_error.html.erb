<% if obj.errors.any? %>
  <div class='row'>
    <div class="alert alert-danger col-md-8">
      <h5>Please fix the following errors</h5>
      <ul>
        <% obj.errors.full_messages.uniq.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
