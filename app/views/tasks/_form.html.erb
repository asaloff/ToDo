<div class="col-sm-offset-1">
  <%= render 'shared/error', obj: @task %>
</div>

<%= form_for [@user, @task], html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :body, 'Task:', class: "col-sm-1 control-label" %>
    <div class="col-sm-8">
      <%= f.text_area :body, rows: 5, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :priority, 'Priority:', class: "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.select(:priority, options_for_select([['High', 1], ['Medium', 2], ['Low', 3]], selected: @task.priority), {}, {class: 'form-control' } ) %>
    </div>
  </div>

  <div class="col-sm-offset-1 col-sm-10 submit-btn">
    <%= f.submit submit_type, class: 'btn btn-small btn-success' %>
  </div>
<% end %>